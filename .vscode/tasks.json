{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "LaTeX Workshop Build",
            "type": "shell",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$latex"
        }
    ]
}